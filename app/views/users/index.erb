<!-- /users/index -->

<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <h2>Users</h2>

    <% if flash[:message] %>
      <div class="flash-message-wrapper">
        <%= flash[:message] %>
      </div>
    <% end %>

    <table>
      <tr>
        <th> Username </th>
        <th> Email </th>
        <th> View Folders </th>
        <th> View Items </th>
      </tr>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><a href="/folders/users/<%= user.slug %>"><%= user.folders.where(privacy: false).count %></a></td>
          <td><a href="/items/users/<%= user.slug %>"><%= user.items.where(folders: {privacy: false}).count %></a></td>
        </tr>
      <% end %>
    <table>

  </div> <!-- .col-md-8 col-md-offset-2 -->
</div> <!-- .container -->
