<!-- /folders/index -->

<div class="container">

  <% if flash[:message] %>
    <div class="flash-message-wrapper">
      <%= flash[:message] %>
    </div>
  <% end %>

  <div class="col-md-8 col-md-offset-2">
    <% if path_info.match(/\A\/users\//) %>
      <% p_user = path_info.split("/users/").last %>
      <h2><%= p_user %>: Folders</h2>
    <% else %>
      <h2>Folders</h2>
    <% end %>

    <table>
      <tr>
        <th> Name </th>
        <th> Description </th>
        <th> Category </th>
        <th> Owner </th>
        <th> Private </th>
        <th> Items </th>
      </tr>

      <% @folders.each do |folder| %>
        <tr>
          <td><a href="/folders/<%= folder.id %>/<%= folder.slug %>"><%= folder.name %></a></td>
          <td><%= folder.description %></td>
          <% if folder.category_id %>
            <td><%= folder.category.name %></td>
          <% else %>
            <td> undefined </td>
          <% end %>
          <td><%= folder.user.name %></td>
          <td><input type="checkbox" <% if folder.privacy %> checked <% end %>></td>
          <td><a href="/users/<%= folder.user.slug %>/<%= folder.slug %>"><%= folder.items.count %></td>
        </tr>
      <% end %>
    <table>

  </div> <!-- .col-md-8 col-md-offset-2 -->
</div> <!-- .container -->
